@model IEnumerable<Clinic.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.appoitmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentType)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.appoitmentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentType.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.appoitmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.appoitmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.appoitmentId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>